{
  "name": "sample-commander",
  "version": "2.2.2-beta4",
  "description": "A spectrogram-assisted file browser & player for audio recordings",
  "author": "Lennart Pegel <SAMPLECOMMANDER@JUSTLEP.NET>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/justlep/sample-commander.git"
  },
  "issues": "https://github.com/justlep/sample-commander/issues",
  "keywords": [
    "audio",
    "sample",
    "recording",
    "spectrogram",
    "fieldrecording",
    "ffmpeg",
    "wave",
    "mp3",
    "player",
    "browser"
  ],
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder --publish never",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --ext .js,.vue --format stylish --plugin log-filenames src",
    "lint:fix": "eslint --ext .js,.vue --format stylish --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "test": "jest --verbose"
  },
  "build": {
    "productName": "Sample Commander",
    "appId": "net.justlep.samplecommander",
    "copyright": "Copyright Â© 2019 Lennart Pegel",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/256x256.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1"
    },
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "async": "^3.2.3",
    "buefy": "^0.9.0",
    "electron-store": "^8.0.1",
    "electron-window-state": "^5.0.3",
    "lodash": "^4.17.21",
    "mousetrap": "^1.6.5",
    "move-file": "^1.2.0",
    "readdirp": "^3.6.0",
    "typeface-cousine": "^1.1.13",
    "typeface-roboto": "^1.1.13",
    "vue": "^2.6.14",
    "vue-electron": "^1.0.6",
    "vuex": "^3.6.2",
    "vuex-pathify": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@babel/runtime": "^7.17.0",
    "@growthbunker/vuedarkmode": "^0.5.56",
    "@types/jest": "^27.4.0",
    "ajv": "^6.10.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "babel-plugin-istanbul": "^6.1.1",
    "bulma-slider": "^2.0.5",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^5.1.6",
    "css-loader": "^2.1.1",
    "del": "^3.0.0",
    "electron": "11.5.0",
    "electron-builder": "^22.14.5",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-log-filenames": "^1.0.5",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^4.5.2",
    "inject-loader": "^4.0.1",
    "jest": "^27.4.7",
    "mini-css-extract-plugin": "0.4.0",
    "node-loader": "^0.6.0",
    "node-sass": "^6.0.1",
    "pug": "~3.0.1",
    "pug-plain-loader": "^1.1.0",
    "sass-loader": "^10.2.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.8",
    "vue-multipane": "^0.9.5",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^4.1.3"
  }
}
